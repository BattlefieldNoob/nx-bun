{
  "name": "task-runner",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/task-runner/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/task-runner",
        "main": "packages/task-runner/src/index.ts",
        "tsConfig": "packages/task-runner/tsconfig.lib.json",
        "assets": [
          "packages/task-runner/*.md"
        ],
        "generatePackageJson": true,
        "format": [
          "cjs"
        ],
        "skipTypeCheck": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs task-runner {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/task-runner/**/*.ts",
          "packages/task-runner/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/task-runner/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
